@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1 class="jumbotron"> Add a new stylist</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)<br>

  @Html.LabelFor(model => model.Details)
  @Html.TextBoxFor(model => model.Details)<br>
  <input type="submit" value="Add Stylist" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all stylists", "Index")</p>