@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1 class="jumbotron">Stylists</h1>

@if (@Model.Count == 0)
{
  <p>No stylists have been added yet!</p>
}

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}

<h3>@Html.ActionLink("Add a new stylist", "Create")</h3>
<h3>@Html.ActionLink("Home", "Index", "Home")</h3>